<script>
  function isEdge() {
    if (
      navigator.userAgent.indexOf("Edge") > -1 ||
      navigator.userAgent.indexOf("Edg") > -1
    ) {
      return true;
    } else {
      return false;
    }
  }

  var imageElement = document.querySelector("#bg-image-modely") as HTMLImageElement;

  if (isEdge()) {
    imageElement.src = "model-y.webp";
  } else {
    imageElement.src = "model-y.avif";
  }
</script>
